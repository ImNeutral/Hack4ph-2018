<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".modules.activities.SetUpProductsActivity"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <include
            android:id="@+id/layout_header"
            layout="@layout/layout_toolbar_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/button_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_circular_filled"
                        android:padding="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="30dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add_black_24dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/text_youHave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextStyleLight"
                            android:text="@string/youHaveNo"/>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginBottom="30dp"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/text_continue"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            style="@style/ButtonStyleCorner"
                            android:text="Continue"/>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    </LinearLayout>
</layout>