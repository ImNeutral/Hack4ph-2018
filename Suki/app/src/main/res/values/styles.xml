<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleLight">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextStyleBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextStyleRegular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ButtonStyleFilled">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/bg_btn_green_filled</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:radius">25dp</item>
    </style>

    <style name="ButtonStyleCorner">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/bg_btn_green_corner</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:radius">25dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
